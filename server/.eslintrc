env: 
    node: true
    browser: true
    es6: true
    jquery: true
    amd: true

rules: 
    block-scoped-var: 2
    brace-style: [2, 1tbs]
    camelcase: 1
    curly: 2
    eol-last: 0
    eqeqeq: [2, smart]
    max-depth: [1, 3]
    max-statements: [1, 45]
    new-cap: 1
    no-extend-native: 2
    no-mixed-spaces-and-tabs: 2
    no-trailing-spaces: 1
    no-use-before-define: [2, nofunc]
    no-unused-vars: 1
    quotes: [2, single, avoid-escape]
    semi: [2, always]
    space-after-keywords: [2, always]
    space-in-brackets: [0, always]
    strict: 0
    comma-dangle: 0
    no-underscore-dangle: 0
    no-console: 1
    space-unary-ops: 0

ecmaFeatures:
    jsx: true

globals: 
    __: true    
    __dirname: true
    console: true
    module: true
    process: true
    require: true
    window: true
